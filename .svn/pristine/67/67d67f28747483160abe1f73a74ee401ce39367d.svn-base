{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements.txt && python manage.py migrate",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "python manage.py runserver" // inicia o servidor automaticamente 
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        // colocar se quiser abrir algum arquivo por padr√£o sempre q iniciar
      ]
    },
    "vscode": {
      "extensions": [
		"ms-python.python",
		"GitHub.copilot",
		"ms-python.pylint"
	]
    }
  },
  "portsAttributes": {
    "8000": {
      "label": "Ada",
      "onAutoForward": "openBrowserOnce"
    }
  },
  "forwardPorts": [8000]
}
